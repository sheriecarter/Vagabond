<div class="m-x-auto newuser" style="width: 400px;">
<%= form_for @user do |f| %>
  <div>
    <span class="label label-default"></span><%= f.text_field :name, placeholder: "Full Name" %>
  </div>
  <br>
  <div>
    <span class="label label-default"></span><%= f.text_field :current_city, placeholder: "Current City" %>
  </div>
  <br>
  <div>
    <span class="label label-default"></span><%= f.text_field :email, placeholder: "Email" %>
  </div>
  <br>
  <div>
    <span class="label label-default"></span><%= f.password_field :password, placeholder: "Password" %>
  </div>
  <br>
  <%= f.submit "Sign Up" %>
<% end %>
</div>
